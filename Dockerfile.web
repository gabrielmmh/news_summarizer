FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies (only what we need for the web app)
RUN pip install --no-cache-dir \
    flask==3.0.3 \
    psycopg2-binary==2.9.9 \
    python-dotenv==1.0.1

# Copy source code
COPY src /app/src

# Expose port
EXPOSE 5000

# Run the web app
CMD ["python", "-m", "src.web.app"]
